{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/types/*": ["./src/types/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/components/*": ["./frontend/src/components/*"],
      "@/pages/*": ["./frontend/src/pages/*"],
      "@/hooks/*": ["./frontend/src/hooks/*"],
      "@/services/*": ["./frontend/src/services/*"],
      "@/store/*": ["./frontend/src/store/*"],
      "@/functions/*": ["./backend/src/functions/*"],
      "@/shared/*": ["./backend/src/shared/*"],
      "@/constructs/*": ["./infrastructure/lib/constructs/*"],
      "@/stacks/*": ["./infrastructure/lib/stacks/*"],
      "@/config/*": ["./infrastructure/lib/config/*"]
    },
    "types": ["node", "jest", "aws-lambda"]
  },
  "include": [
    "src/**/*",
    "frontend/src/**/*",
    "backend/src/**/*",
    "infrastructure/lib/**/*",
    "infrastructure/bin/**/*",
    "tests/**/*",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "cdk.out",
    "coverage",
    ".nyc_output",
    "**/*.js",
    "**/*.d.ts",
    "**/*.js.map"
  ],
  "references": [
    {
      "path": "./frontend"
    },
    {
      "path": "./backend"
    },
    {
      "path": "./infrastructure"
    }
  ]
}
