{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "declaration": true,
    "composite": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./lib/*"],
      "@/stacks/*": ["./lib/stacks/*"],
      "@/constructs/*": ["./lib/constructs/*"],
      "@/config/*": ["./lib/config/*"],
      "@econlens/shared": ["../shared/src"]
    }
  },
  "include": [
    "lib/**/*",
    "bin/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "cdk.out",
    "**/*.test.ts"
  ],
  "references": [
    {
      "path": "../shared"
    }
  ]
}
